#: import FadeTransition kivy.uix.screenmanager.FadeTransition

MyManager:
    FirstScreen:
    GameScreen:
    GameOver:

<MyManager>:
    id: screen_one
    transition: FadeTransition()


<FirstScreen>:
    name: "first"
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0.5, 0.6, 0.7, 0.5
            Rectangle:
                size: self.width, self.height
        Label:
            text: "Hangman Game - Lets Go!!!"
            font_size: 24
        Button:
            text: "Click to Play"
            size_hint_y: 0.15
            background_color: 'blue'
            on_press:
                app.root.current = 'second'

<GameScreen>:
    name: "second"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            canvas:
                Color:
                    rgba: 0.0, 0.7, 0.9, 0.5
                Rectangle:
                    size: self.width, self.height
                    pos: self.pos
            orientation:"horizontal"
            size_hint_y: 0.10
            Label:
                id: score
                text: "Score: " #to insert f-string
                font_size: 36
            Label:
                id: time
                text: "Time: " #to insert f-string
                font_size: 36
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.60
            Widget:
                id: hangman_image
                size_hint_x: 1.1
                canvas:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 0.5
                    Rectangle:
                        size: self.width, self.height
